template(name="profile")
  .container
    .row
      .col-md-5.toppad.pull-right.col-md-offset-3
        a(href='/edit-profile') Edit Profile
        a#logout-link(href='#') Logout
        br
        p.text-info {{currentLocalTime}}
      .col-xs-12.col-sm-12.col-md-6.col-lg-6.col-xs-offset-0.col-sm-offset-0.col-md-offset-3.col-lg-offset-3.toppad
        .panel.panel-info
          .panel-heading
            h3.panel-title(data-bind="text: name")
          .panel-body
            .row
              .col-md-3.col-lg-3(align='center')
                i.fa.fa-user.fa-5(style='font-size: 8em;')
              .col-md-9.col-lg-9
                table.table.table-user-information
                  tbody
                    tr
                      td Title:
                      td(data-bind="text: type")
                    tr
                      td Email
                      td
                        a(href='mailto:{{currentUser.emails.[0].address}}' data-bind="text: email")
                    tr
                      td Phone Number
                      td(data-bind="text: phone")
          .panel-footer
            a.btn.btn-sm.btn-warning(href='/edit-profile' data-original-title='Edit this user' data-toggle='tooltip' type='button')
              i.glyphicon.glyphicon-edit

template(name="editProfile")
  .container
    .row
      form#profile-edit-form(role="form")
        .col-md-5.toppad.pull-right.col-md-offset-3
          a#save-profile(href='#' data-bind="click: save") Save
          a#logout-link(href='#' data-bind="click: logout") Logout
          br
          p.text-info {{currentLocalTime}}
        .col-xs-12.col-sm-12.col-md-6.col-lg-6.col-xs-offset-0.col-sm-offset-0.col-md-offset-3.col-lg-offset-3.toppad
          .panel.panel-info
            .panel-heading
              h3.panel-title
                input#name(data-bind="value: name")
            .panel-body
              .row
                .col-md-3.col-lg-3(align='center')
                  i.fa.fa-user.fa-5(style='font-size: 8em;')
                .col-md-9.col-lg-9
                  table.table.table-user-information
                    tbody
                      tr
                        td Title:
                        td
                          if currentUser.isAdmin
                            input#type(data-bind="value: type")
                          else
                            span(data-bind="text: type")
                      tr
                        td Email
                        td
                          input(data-bind="value: email")
                      tr
                        td Phone Number
                        td
                          input#phonenumber(data-bind="value: phone")
            .panel-footer
              a.btn.btn-sm.btn-danger(href='/profile' data-original-title='Cancel Edit' data-toggle='tooltip' type='button')
                  i.glyphicon.glyphicon-remove
              span.pull-right
                input#save-button.btn-success.form-control(type="submit" value="Save" data-bind="click: save")
