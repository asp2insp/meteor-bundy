template(name="billingHeader")
  .row
    .col-lg-12
      h1.page-header Monthly Billing
        .pull-right
          #monthdropdown.btn-group
            button.btn.btn-default.dropdown-toggle(type="button", data-toggle="dropdown")
              span#monthtext Month Of...
              span.caret
            ul.dropdown-menu.pull-right(role="menu")
              each months
                li
                  a(href="#") {{name}}
          | {{currentYear}}

template(name="approvePay")
  #page-wrapper
    +billingHeader
    .row
      .col-lg-12.text-center
        +billingSteps
    .row
      .col-lg-6
        .panel.panel-default
          .panel-heading
            | Unreviewed Employees
          .panel-body
            .row
              .col-md-12
                +tabular(table=TabularTables.BillingEmployees selector=unreviewedEmployeesSelector class="table table-condensed")
      .col-lg-6
        .panel.panel-default
          .panel-heading
            | Reviewed Employees
          .panel-body
            .row
              .col-md-12
                +tabular(table=TabularTables.BillingEmployees selector=reviewedEmployeesSelector class="table table-condensed")

